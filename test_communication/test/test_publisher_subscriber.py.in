        cmd=publisher_cmd,
        name='test_publisher',
        env=publisher_env,
    ))

    subscriber_env['RCL_ASSERT_RMW_ID_MATCHES'] = '@SUBSCRIBER_RMW@'
    subscriber_env['RMW_IMPLEMENTATION'] = '@SUBSCRIBER_RMW@'

